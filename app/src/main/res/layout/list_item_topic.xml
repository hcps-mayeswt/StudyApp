<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/topic_list_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        android:padding="4dp"
        android:background="@null"
        android:textSize="14sp"
        android:gravity="center"
        android:src="@drawable/remove_topics_50dp"
        />

    <LinearLayout
        android:id="@+id/topic_list_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/topic_list_remove"
        android:layout_alignBottom="@+id/topic_list_remove"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:layout_marginLeft="3dp">

        <TextView
            android:id="@+id/topic_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            tools:text="Title" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Questions Correct: 5"
                android:textColor="@color/colorPrimary"
                android:id="@+id/topic_list_correct_questions"/>
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Questions Attempted: 10"
                android:id="@+id/topic_list_attempted_questions"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>