<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.willm.study.UI.StudyQuestionsActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="@color/colorPrimary"
        android:textSize="12pt"
        android:id="@+id/question"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Answer:"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="@color/colorPrimary"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Type the answer here"
            android:id="@+id/answer"/>
    </LinearLayout>
    <!--Last Answer-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_gravity="bottom"
        android:layout_marginBottom="160dp"
        android:gravity="center"
        android:id="@+id/lastAnswer"/>

    <!--Correct attempted and correct in a row display-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <!--# Correct display-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correct:"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000000"
                android:id="@+id/numCorrect"
                android:gravity="right"
                android:layout_marginRight="35dp"/>
        </LinearLayout>
        <!--# Attempted display-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attempted:"
                android:textSize="24sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000000"
                android:id="@+id/numAttempted"
                android:gravity="right"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <!--# In-A-Row display-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Streak:"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000000"
                android:id="@+id/numInARow"
                android:gravity="right"
                android:layout_marginRight="43dp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="15dp"
        android:onClick="moveOn"/>
</FrameLayout>
